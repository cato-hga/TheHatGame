<!DOCTYPE html>
<html>
<head>
  <title>TheHatGame</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

  <!--<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">-->
  <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>-->
  <!--<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>-->


</head>
<body>
<!--Navbar start-->
<nav class="navbar navbar-inverse navbar-default" >
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand"> <%= link_to 'The Hat Game', root_path, class: 'navbar-brand' %>
        <img  class="logo"  src="https://s3-us-west-2.amazonaws.com/thehatgame/HatGameLogo.png">

      </a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">

        <li class="active"><a <%= link_to 'Products', products_path %> <span class="sr-only">(current)</span></a></li>
        <li><a href="#">Link</a></li>
      </ul>

    </div>
  </div>
</nav>
<!--Navbar ends-->

<%= render 'layouts/notices' %>

<div class="container">

  <%= yield %>

  <hr>

  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12">
        <p>Copyright &copy; The Hat Game 2015</p>
      </div>
    </div>
  </footer>
</div>
<div>
  <!-- Latest compiled and minified JavaScript -->
  <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>-->
</div>
</body>

</html>
